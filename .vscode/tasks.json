{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run Plush League",
			"type": "shell",
			"command": "Unity.exe",
			"args": [
				"-batchmode",
				"-quit",
				"-projectPath",
				"${workspaceFolder}",
				"-buildTarget",
				"StandaloneWindows64",
				"-executeMethod",
				"BuildScript.Build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}